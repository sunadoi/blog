{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "types": ["@cloudflare/workers-types", "vite/client"],
    "baseUrl": ".",
    "paths": { "@/*": ["./app/*"] },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": ["app/**/*.ts", "app/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
